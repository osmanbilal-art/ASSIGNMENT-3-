<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Main content-->
<main class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="fa-solid fa-dumbbell"></i> <%= title %>
            </h1>
            <a href="/workouts/add" class="btn btn-primary mb-3" role="button">
                <i class="fas fa-plus-circle"></i> Add New Workout
            </a>
            
            <% if(WorkoutList.length === 0) { %>
                <div class="alert alert-info">
                    <i class="fa-solid fa-circle-info"></i> No workouts found. Start by adding your first workout!
                </div>
            <% } else { %>
                <table class="table table-bordered table-striped table-hover">
                    <!--Header Row-->
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">Exercise</th>
                            <th class="text-center">Sets</th>
                            <th class="text-center">Reps</th>
                            <th class="text-center">Weight (lbs)</th>
                            <th class="text-center">Date</th>
                            <th>Notes</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let count=0; count<WorkoutList.length; count++) { %>
                            <tr>
                                <td class="text-center"><%= WorkoutList[count].exerciseName %></td>
                                <td class="text-center"><%= WorkoutList[count].sets %></td>
                                <td class="text-center"><%= WorkoutList[count].reps %></td>
                                <td class="text-center"><%= WorkoutList[count].weight %></td>
                                <td class="text-center">
                                    <%= new Date(WorkoutList[count].date).toLocaleDateString() %>
                                </td>
                                <td><%= WorkoutList[count].notes || 'N/A' %></td>
                                <td class="text-center">
                                    <a href="/workouts/edit/<%= WorkoutList[count]._id%>" 
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>
                                    <a href="/workouts/delete/<%= WorkoutList[count]._id%>" 
                                        class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this workout?')"> 
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</main>

<%- include ../partials/footer.ejs %>