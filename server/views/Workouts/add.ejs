<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container mt-4">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class="mb-4">
                <i class="fa-solid fa-plus-circle"></i> <%= title %>
            </h1>
            <form class="form" method="post">
                <div class="form-group mb-3">
                    <label for="exerciseNameField" class="form-label">Exercise Name</label>
                    <input type="text" class="form-control"
                        id="exerciseNameField"
                        placeholder="e.g., Bench Press, Squats, Deadlift"
                        name="exerciseName" required>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="setsField" class="form-label">Sets</label>
                        <input type="number" class="form-control"
                            id="setsField"
                            placeholder="Enter sets"
                            name="sets"
                            min="1"
                            required>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="repsField" class="form-label">Reps</label>
                        <input type="number" class="form-control"
                            id="repsField"
                            placeholder="Enter reps"
                            name="reps"
                            min="1"
                            required>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="weightField" class="form-label">Weight (lbs)</label>
                        <input type="number" class="form-control"
                            id="weightField"
                            placeholder="Enter weight in lbs"
                            name="weight"
                            min="0"
                            step="0.5"
                            required>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="dateField" class="form-label">Date</label>
                    <input type="date" class="form-control"
                        id="dateField"
                        name="date"
                        value="<%= new Date().toISOString().split('T')[0] %>"
                        required>
                </div>

                <div class="form-group mb-3">
                    <label for="notesTextArea" class="form-label">Notes (Optional)</label>
                    <textarea class="form-control"
                        id="notesTextArea"
                        placeholder="Any additional notes about your workout..."
                        name="notes"
                        rows="3"></textarea>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-save"></i> Save Workout
                    </button>
                    <a href="/workouts" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>